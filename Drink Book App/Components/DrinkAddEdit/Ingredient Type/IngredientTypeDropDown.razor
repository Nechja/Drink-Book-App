@attribute [Authorize(Roles = "Admin, Mod")]
<MudDrawer @bind-Open="@OpenIngredient" Width="60%" Anchor="Anchor.Start" Elevation="1" Variant="@DrawerVariant.Temporary">
	<AEIngredientTypeCard />
</MudDrawer>

@if(Model == null || Model.Id == 0)
{
	<MudStack Row="true" Justify="Justify.FlexStart">
	<MudAutocomplete T="string" Label="Ingredient Type"
					@bind-Value="SearchText"
					@bind-Text="SearchText"
					ResetValueOnEmptyText=true
					SearchFunc="Search"
					CoerceText=true
					AdornmentIcon="@Icons.Material.Filled.ArrowBackIosNew" AdornmentColor="Color.Dark" />
		<MudIconButton Icon="@Icons.Material.Filled.Add" OnClick="@(() => OpenIngredient = !OpenIngredient)" />
	</MudStack>
	
}
else
{

	<MudText><MudChip Label="true" Color="Color.Transparent" Variant="Variant.Text" OnClose="Closed">@Model.Name</MudChip></MudText>

}

@attribute [Authorize(Roles = "Admin")]

<MudCard Elevation="1" Class="py-8 px-10">
	<MudCardContent>
	<MudItem xs="12" sm="6" md="4">
	<MudAutocomplete T="string" Label="Tags"
		@bind-Value="TagText"
		@bind-Text="TagText"
		SearchFunc="TagSearch"
		OnKeyDown="EnterText"
		esetValueOnEmptyText="true"
		CoerceText=true
		AdornmentIcon="@Icons.Material.Filled.Tag" AdornmentColor="Color.Dark"/>
	</MudItem>
	</MudCardContent>
	<MudCardActions>
		@foreach (TagDisplayModel t in Tags)
		{
			<MudChip AdornmentIcon="@Icons.Material.Filled.Tag" OnClose="Closed" Text="@t.Value"></MudChip>
		}
	</MudCardActions>

</MudCard>
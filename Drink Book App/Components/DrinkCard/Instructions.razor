<MudPaper Elevation="0">
    <MudItem xs="12" Class="pb-4">
        <MudList Dense="true" DisablePadding="true">
        @if (FlagingItems.Any())
        {
            @foreach(var item in FlagingItems)
            {
                    <MudListSubheader DisableGutters="true" Class="pb-n4 mb-n4"><MudChip Label="true">@item.decoration.OpeningStatement</MudChip></MudListSubheader>

                    @foreach (var i in item.items)
                    {

                        <MudListItem Dense="true" Class="pb-n4 mb-n4">
                            <MudStack Row="true" Spacing="0" Justify="Justify.FlexStart" AlignItems="AlignItems.Stretch">

                                @if (i.Special != null)
                                {
                                    <MudChip Label="true" Variant="Variant.Text">@i.Special</MudChip>
                                }
                                @if (i.Oz != null)
                                {
                                    <MudChip Label="true" Variant="Variant.Text">@i.OzString</MudChip>
                                }
                                <MudTooltip Text="@i.Ingredient.IngredientType.Name" Arrow="true" Placement="Placement.Right">
                                    <MudChip Label="true" Variant="Variant.Text">@i.Ingredient.Name</MudChip>
                                </MudTooltip>

                            </MudStack>

                        </MudListItem>
                    }




                    @if (!String.IsNullOrEmpty(item.decoration.ClosingStatment))
                    {
                        <MudListSubheader Class="pb-n4 mb-n4 pt-4" DisableGutters="true"><MudChip Label="true">@item.decoration.ClosingStatment</MudChip></MudListSubheader>
                    }

        }
        }
            @foreach (var i in NoFlagInstructions)
            {

                <MudListItem DisableGutters="true" Class="pb-n4 mb-n4">
                    <MudStack Row="true" Spacing="0" Justify="Justify.FlexStart" AlignItems="AlignItems.Stretch">
                        @if (i.Special != null)
                        {
                            <MudChip Label="true" Variant="Variant.Text">@i.Special</MudChip>
                        }
                        @if (i.Oz != null)
                        {
                            <MudChip Label="true" Variant="Variant.Text">@i.OzString</MudChip>
                        }
                        <MudTooltip Text="@i.Ingredient.IngredientType.Name" Arrow="true" Placement="Placement.Right">
                            <MudChip Label="true" Variant="Variant.Text">@i.Ingredient.Name</MudChip>
                        </MudTooltip>

                    </MudStack>
                </MudListItem>
            }
            <MudSpacer/>
    </MudList>
    </MudItem>
</MudPaper>



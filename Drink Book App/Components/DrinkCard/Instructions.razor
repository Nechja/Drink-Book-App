<MudPaper Elevation="0">
    <MudList Class="list-group">
        @if (FlagingItems.Any())
        {
            @foreach(var item in FlagingItems)
            {
                <MudListItem Text="@item.decoration.OpeningStatement"/>
                <MudList>
                    @foreach(var i in item.items)
                    {
                        <MudListItem>
                            @if (i.Special != null)
                            {
                                <MudText>@i.Special </MudText>
                            }
                            @if (i.Oz != null)
                            {
                                <MudText>@i.Oz.Value.ToString() </MudText>
                            }
                            <MudText>@i.Ingredient.Name</MudText>
                        </MudListItem>
                    }
                </MudList>


            }
        }

    </MudList>
</MudPaper>



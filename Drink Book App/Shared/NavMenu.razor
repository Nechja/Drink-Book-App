<MudLayout>
    <MudAppBar Color="Color.Dark" Dense="true">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudChip Color="Color.Dark" Variant="Variant.Filled" Label="true" Text="Drink Book" Size="Size.Large"></MudChip>
        <MudSpacer />


        <AuthStatus></AuthStatus>
    </MudAppBar>
    <MudDrawer @bind-Open="@open" Anchor="Anchor.Start" Elevation="1" Variant="@DrawerVariant.Temporary" Color="Color.Dark">
        <MudDrawerHeader>

        </MudDrawerHeader>
        <MudNavMenu>

            <MudNavLink Icon="@Icons.Material.Filled.Book" Href="/DrinkList">Drink List</MudNavLink>

            <AuthorizeView Roles="Admin">
                <MudNavLink IconColor="@Color.Warning" Icon="@Icons.Material.Filled.List" Href="/admintools/addmindrinklist">Admin Drink List</MudNavLink>
                <MudNavLink IconColor="@Color.Warning" Icon="@Icons.Material.Filled.Search" Href="/admintools/audit">Drink Audit</MudNavLink>
                
                <MudNavGroup IconColor="@Color.Success" Title="Drink Tools" Icon="@Icons.Material.Filled.Add" Expanded="false">
                    <MudNavLink IconColor="@Color.Success" Icon="@Icons.Material.Filled.LocalDrink" Href="/drinktools/adddrinkpage">Add Drink</MudNavLink>
                    <MudNavGroup Title="Ingredients" Icon="@Icons.Material.Filled.Add" Expanded="true">
                        <MudNavLink Href="/drinktools/ingredients">Ingredients</MudNavLink>
                        <MudNavLink Href="/drinktools/ingredient-types">Ingredient Types</MudNavLink>
                    </MudNavGroup>
                    <MudNavGroup IconColor="@Color.Success" Title="Serving Info" Icon="@Icons.Material.Filled.Add" Expanded="true">
                        <MudNavLink Href="/drinktools/glassware">Glassware</MudNavLink>
                        <MudNavLink Href="/drinktools/ice">Ice</MudNavLink>
                        <MudNavLink Href="/drinktools/garnish">Garnish</MudNavLink>
                        <MudNavLink Href="/drinktools/rim">Rim</MudNavLink>
                        <MudNavLink Href="/drinktools/flags">Serving Flags</MudNavLink>
                    </MudNavGroup>
                    <MudNavGroup Title="Serving Info" Icon="@Icons.Material.Filled.Tag" Expanded="true">
                        <MudNavLink  Href="/drinktools/flags">Tags</MudNavLink>
                    </MudNavGroup>
                    <MudSpacer/>

                </MudNavGroup>

                <MudNavGroup IconColor="@Color.Success" Title="Data And Reports" Icon="@Icons.Material.Filled.DataExploration" Expanded="false">

                </MudNavGroup>


            </AuthorizeView>
        </MudNavMenu>
    </MudDrawer>

</MudLayout>



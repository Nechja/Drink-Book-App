<MudLayout>
    <MudAppBar Color="Color.Dark" Dense="true">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudButton Href="/" Variant="Variant.Text">Drink Book</MudButton>
        <MudSpacer />

        
        <AuthStatus></AuthStatus>
        <UserIconMenu></UserIconMenu>
    </MudAppBar>
    <MudDrawer @bind-Open="@open" Anchor="Anchor.Start" Elevation="1" Variant="@DrawerVariant.Temporary" Color="Color.Dark">
        <MudDrawerHeader>
            <MudText Typo="@Typo.caption" Color="@Color.Error">Build Version: Alpha</MudText>
        </MudDrawerHeader>
        <MudNavMenu>

            <MudNavLink IconColor="@Color.Info" Icon="@Icons.Material.Filled.Book" Href="/drinks">Drink List</MudNavLink>

            <AuthorizeView Roles="Admin, Mod">
                <MudNavLink IconColor="@Color.Info" Icon="@Icons.Material.Filled.Add" Href="/drinktools/adddrinkpage">Add Drink</MudNavLink>

                <MudNavGroup IconColor="@Color.Success" Title="Drink Tools" Icon="@Icons.Material.Filled.LocalDrink" Expanded="false">
                    <MudNavGroup IconColor="@Color.Success" Title="Ingredients" Icon="@Icons.Material.Filled.List">
                        <MudNavLink Icon="@Icons.Material.Filled.FlagCircle" Href="/drinktools/ingredients">Ingredients</MudNavLink>
                        <MudNavLink Icon="@Icons.Material.Filled.ChangeCircle" Href="/drinktools/ingredient-types">Ingredient Types</MudNavLink>
                </MudNavGroup>
                    <MudNavGroup IconColor="@Color.Success" Title="Serving Info" Icon="@Icons.Material.Filled.GridView">
                        <MudNavLink Icon="@Icons.Material.Filled.LocalBar" Href="/drinktools/glassware">Glassware</MudNavLink>
                        <MudNavLink Icon="@Icons.Material.Filled.CropSquare" Href="/drinktools/ice">Ice</MudNavLink>
                        <MudNavLink Icon="@Icons.Custom.Uncategorized.FoodApple" Href="/drinktools/garnish">Garnish</MudNavLink>
                        <MudNavLink Icon="@Icons.Material.Filled.Circle" Href="/drinktools/rim">Rim</MudNavLink>
                        <MudNavLink Icon="@Icons.Material.Filled.Flag" Href="/drinktools/flags">Serving Flags</MudNavLink>
                    <MudSpacer/>
                    </MudNavGroup>
                    <MudNavGroup Title="Tags">
                        <MudNavLink Href="/drinktools/tagulation">Tags</MudNavLink>
                    </MudNavGroup>
                </MudNavGroup>
                <MudSpacer />
            </AuthorizeView>

            <AuthorizeView Roles="Admin">
                <MudNavGroup IconColor="@Color.Warning" Title="Admin Tools" Icon="@Icons.Material.Filled.SupervisorAccount">
                    <MudNavLink IconColor="@Color.Warning" Icon="@Icons.Material.Filled.Search" Href="/admintools/audit">Drink Audit</MudNavLink>
                </MudNavGroup>
            </AuthorizeView>
            <AuthorizeView Roles="Admin,Mod">
                
                <MudNavGroup IconColor="@Color.Error" Title="Mod Tools" Icon="@Icons.Material.Filled.ManageAccounts">
                    <MudNavLink IconColor="@Color.Error" Icon="@Icons.Material.Filled.Queue" Href="/admintools/verifyqueue">Verify Queue</MudNavLink>
                </MudNavGroup>

            </AuthorizeView>
            <MudNavGroup IconColor="@Color.Tertiary" Title="Data And Reports" Icon="@Icons.Material.Filled.DataExploration" Expanded="false">
                <MudNavLink IconColor="@Color.Tertiary" Icon="@Icons.Material.Filled.Dashboard" Href="/data/dashboard">Data Dashboard</MudNavLink>
                <MudNavLink IconColor="@Color.Tertiary" Icon="@Icons.Material.Filled.Tag" Href="/data/drinktags">Data Dashboard</MudNavLink>
            </MudNavGroup>

        </MudNavMenu>
        
    </MudDrawer>

</MudLayout>


